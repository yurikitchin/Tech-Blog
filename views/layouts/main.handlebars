<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/style.css" rel="stylesheet">
    <title>Tech Blog</title>
</head>

<body>
    <header class="header">
        <nav class="navBar">
            <div class="titleImage">
                <img class="logo" src="/images/logo.png">
                <img class="logoText" src="/images/tech-spot.png" alt="">
            </div>

            <div class="menu">
                {{#if loggedIn}}
                <a href="#" class="menuLinks">Home</a>
                {{/if}}
                {{#if loggedIn}}
                <a href="#" class="menuLinks">Dashboard</a>
                {{/if}}
                {{#if loggedIn}}
                <a href="#" id="logout" class="menuLinks">Logout</a>
                {{else}}
                <a id="loginBtn" href="#" class="menuLinks">Login</a>
                {{/if}}
            </div>

        </nav>
    </header>


    {{{body}}}

{{!-- sign up modal --}}
    <section class="signModal">
      <div class="modalContent">
        <h1 class="modalTitle">Sign Up</h1>
        <button id="closeSign" class="closeBtn">&times;</button>
      </div>
      <form class="form" action="#">

        <label for="signup"></label>
        <input type="text" id="signup" placeholder="Username" />

        <label for="password-signup"></label>
        <input type="password" id="password-signup" autocomplete="new-password" placeholder="Password" />

        <label for="confirm-password-signup"></label>
        <input type="password" id="confirm-password-signup" autocomplete="new-password" placeholder="Confirm Password" />

        <input class="submitBtn" id="signUpBtn" type="submit" value="Submit" />
      </form>
    </section>
{{!-- Login Modal --}}
    <section class="loginModal">
      <div class="modalContent">
        <h1 class="modalTitle">Sign In</h1>
        <button id="closeLogin" class="closeBtn">&times;</button>
      </div>

      <form class="form">

        <label for="username-login"></label>
        <input type="text" id="userLogin" placeholder="Username" />

        <label for="password-login"></label>
        <input type="password" id="password-login" autocomplete="new-password" placeholder="Password" />

        <input class="submitBtn" id="login-submit" type="submit" value="Submit" />
      </form>

      <div class="signUp">
        <p>Not Registered?</p>
        <button id="signBtn" >Sign Up</button>
      </div>
    </section>
</body>

{{#if loggedIn}}
<script src="/js/logout.js"></script>
{{else}}
<script src="/js/loggin.js"></script>
{{/if}}
</html>